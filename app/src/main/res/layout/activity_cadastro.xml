<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00F8F3F3"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextNomeCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Digite seu nome"
            android:inputType="textCapCharacters" />

        <TextView
            android:id="@+id/textViewErrorNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome inválido" />

        <EditText
            android:id="@+id/editTextNumeroCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Digite seu número"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textViewErrorNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número inválida" />

        <EditText
            android:id="@+id/editTextEmailCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Digite seu email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textViewErrorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email inválida" />

        <EditText
            android:id="@+id/editTextSenhaCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Escolha sua senha"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewErrorSenah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha inválida" />

        <Button
            android:id="@+id/buttonConfirmarCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#00C853"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Confirmar" />

        <Button
            android:id="@+id/buttonCancelarCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFF"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:text="Cancelar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>